<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/base_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@mipmap/base_titlebar_bg">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_btn_back"/>
        <TextView
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:id="@+id/tv_title"
            android:text="标题"
            android:singleLine="true" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/audio_player_anim"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv_anim"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:id="@+id/tv_artist"
            android:text="艺术家"
            android:singleLine="true"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/iv_anim"/>
    </RelativeLayout>
    <com.bob.mvideo.ui.view.LyricView
        android:id="@+id/lyricView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00/02:23"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:layout_gravity="right"/>

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@android:color/transparent"
            android:progressDrawable="@drawable/audio_progress_drawable" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/play_mode"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/selector_audio_mode_normal"/>
            <ImageView
                android:id="@+id/btn_pre"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_btn_audio_pre"/>
            <ImageView
                android:id="@+id/btn_mplay"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:background="@drawable/selector_btn_audio_pause"/>
            <ImageView
                android:id="@+id/btn_next"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/selector_btn_audio_next"/>
            <ImageView
                android:id="@+id/btn_lyrics"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/btn_lyrics"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
